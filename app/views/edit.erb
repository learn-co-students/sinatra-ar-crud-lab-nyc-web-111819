<h1>Let's update!</h1>
<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <h3><input id="title" type="text" name="article[title]" value="<%= @article.title %>"></h3>
  <h3><input id="content" type="text" name="article[content]" value="<%= @article.content %>"></h3>
  <input type="submit" value="Update">
</form>